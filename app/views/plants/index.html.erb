<div class ="container">

  <h1> Plants List</h1>
  <div class="row">
    <div class="col-lg-12">
      <div class="row">


        <% @plants.each do |plant| %>
          <div class="col-4">
            <%= link_to(plant_path(plant), class:"card-trip") do %>

              <% if plant.photo.attached? %>
                <%= image_tag plant.photo, height: 300, width: 400, crop: :fill %>
              <% else %>
                <%= image_tag "plant-icon.jpeg" %>
              <% end %>

              <div class="card-trip-infos">
                <div>
                  <p class="title"><%= plant.species %></p>
                  <p><%= plant.status %></p>
                </div>
                <h2 class="card-trip-pricing"><%= plant.pricing %>â‚¬/mont</h2>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


</div>
