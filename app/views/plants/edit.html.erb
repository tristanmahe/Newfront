<h1>Edit Plant</h1>

<% if policy(Plant).create? %>
  <%= simple_form_for(@plant) do |f| %>
    <%= f.input :species %>
    <%= f.input :status %>
    <%= f.input :pricing %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>

  <% end %>
<% end %>

<%= link_to "Back to Plants", plants_path %>
